@model DotNetAssignment.ViewModels.UserViewModel

@{
    ViewBag.Title = "Create Employee Profile";
    Layout = "~/Views/Shared/LayoutPage1.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h1>Create Profile</h1>
        <form novalidate="novalidate" action="/account/CreateProfile" method="post" class="needs-validation">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="txtFirstName">First Name:</label>
                    <input type="text" class="form-control" id="txtFirstName" name="FirstName" required="required" />
                </div>
                <div class="form-group col-sm-6">
                    <label for="txtFirstName">Last Name:</label>
                    <input type="text" class="form-control" id="txtLastName" name="LastName" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="txtEmail">Email:</label>
                    <input type="text" class="form-control" id="txtEmail" name="Email" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="txtMobile">Mobile:</label>
                    <input type="text" class="form-control" id="txtMobile" placeholder="Mobile" name="Mobile" required="required" pattern="^[6789]\d{9}$" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Invalid mobile Number.
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    <label for="txtRole">Role:</label>
                    <select name="RoleID" id="txtRole">
                        <option value="1">Trainee</option>
                        <option value="2">Developer</option>
                        <option value="3">Project Manager</option>
                        <option value="4">Company Executive</option>
                        <option value="5">Human Resources</option>
                    </select>
                </div>

            </div>
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="txtAddress">Address:</label>
                    <input type="text" class="form-control" id="txtAddress" placeholder="Address" name="Address" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-4">
                    <label for="txtPID">ProjectID:</label>
                    <input type="text" class="form-control" id="txtPID" placeholder="Project ID" name="ProjectID" />
                </div>
                <div class="form-group col-sm-4">
                    <label for="txtSP">Special Permission:</label>
                    <select name="IsSpecialPermission" id="txtSP">
                        <option value="1">Yes</option>
                        <option value="0">No</option>
                    </select>
                </div>
                <div class="form-group col-sm-4">
                    <label for="txtDOB">Date Of Birth:</label>
                    <input type="date" id="txtDOB" name="DateOfBirth" max="2003-01-01" />
                </div>
            </div>

            @Html.ValidationSummary()
            <button type="submit" class="btn btn-primary">Create Profile</button>
        </form>
    </div>
</div>
<script>

    $("a[href='/account/CreateProfile']").attr("id", "active");

    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event) {
        if ($(".needs-validation")[0].checkValidity() == false) {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }
</script>